<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" ParentName="OrganicProductBase" Name="InternalOrgansProductBase">
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>2</MarketValue>
      <Mass>0.1</Mass>
      <MaxHitPoints>60</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Nutrition>0.05</Nutrition>
      <FoodPoisonChanceFixedHuman>0.05</FoodPoisonChanceFixedHuman>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>2</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>AnimalProduct</foodType>
      <ingestEffect>EatMeat</ingestEffect>
      <ingestSound>RawMeat_Eat</ingestSound>
      <preferability>DesperateOnly</preferability>
      <tasteThought>AteRawFood</tasteThought>
      <babiesCanIngest>false</babiesCanIngest>
    </ingestible>
    <thingCategories>
      <li>AnimalProductRaw</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Abstract="True" ParentName="OrganicProductBase" Name="ExternalOrgansProductBase">
